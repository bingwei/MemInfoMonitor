<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     
     <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal">
		<ImageView
			android:layout_width="40sp"
	    	android:layout_height="40sp"
	    	android:id="@+id/app_icon"
	    	android:src="@drawable/ic_launcher"
	    	/>
	    	
   	     <LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:orientation="vertical">
		          <TextView android:id="@+id/app_name"
			         android:textSize="18dip"
			         android:textStyle="bold"
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:text="app_name"
			         />
			
			     <TextView android:id="@+id/app_pkg_name"
			         android:textSize="14dip"
			         android:layout_width="match_parent"
			         android:layout_height="wrap_content"
			         android:text="app_pkg_name"
			         />
			         
			     <LinearLayout
				     android:layout_width="match_parent"
				     android:layout_height="wrap_content"
				     android:orientation="horizontal">
				     <LinearLayout
					     android:layout_width="match_parent"
					     android:layout_height="wrap_content"
						 android:layout_weight="1"
					     android:orientation="horizontal">
						<TextView 
						       android:textSize="10dip"
						       android:layout_width="wrap_content"
						       android:layout_height="wrap_content"
						       android:text="@string/cpu"/>
						<TextView android:id="@+id/app_cpu"
						       android:textSize="10dip"
						       android:layout_width="wrap_content"
						       android:layout_height="wrap_content"
						       android:text="app_cpu"/>
					</LinearLayout>
					<LinearLayout
					     android:layout_width="match_parent"
					     android:layout_height="wrap_content"
						 android:layout_weight="1"
					     android:orientation="horizontal">
						<TextView 
						       android:textSize="10dip"
						       android:layout_width="wrap_content"
						       android:layout_height="wrap_content"
						       android:text="@string/mem"/>
						       
						<TextView android:id="@+id/app_meminfo"
						    android:textSize="10dip"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:text="app_meminfo"/>
				 	</LinearLayout>
				 </LinearLayout>
		 </LinearLayout>
	 </LinearLayout>
 </LinearLayout>
